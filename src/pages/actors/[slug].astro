---
export const prerender = true; ///for server deploy

import MainLayout from "../../layout/MainLayout.astro";
import type { GetStaticPaths } from "astro";
import { slugify } from "../../utils/slugify";

export const getStaticPaths: GetStaticPaths = async () => {
  const API_KEY = "1e7a7835f074482139d752775addeb5e";
  const pageCount = 18;
  const actors = [];

  for (let i = 1; i <= pageCount; i++) {
    const response = await fetch(
      `https://api.themoviedb.org/3/person/popular?api_key=${API_KEY}&language=es-ES&page=${i}`,
    );
    const data = await response.json();
    actors.push(...data.results);
  }

  return actors.map((actor) => ({
    params: { slug: `${slugify(actor.name)}-${actor.id}` },
    props: { actor },
  }));
};

const { slug } = Astro.params;
const id = String(slug).split("-").pop();
const API_KEY = "1e7a7835f074482139d752775addeb5e";
const response = await fetch(
  `https://api.themoviedb.org/3/person/${id}?api_key=${API_KEY}&language=es-ES`,
);
const actor = await response.json();
---

<MainLayout title={actor.title}>
  <main class="actor">
    <section class="actor__content">
      <aside class="actor__poster-wrapper">
        <img
          src={`https://image.tmdb.org/t/p/w500${actor.profile_path}`}
          alt={`Póster de ${actor.name}`}
          class="actor__poster"
        />
        <div class="actor__popularity">
          <div class="actor__popularity-value"
            >{actor.popularity.toFixed(1)}</div
          >
          <span class="actor__popularity-max">/100</span>
        </div>
      </aside>

      <article class="actor__info">
        <header class="actor__header">
          <h1 class="actor__name">{actor.name}</h1>

          {
            actor.birthday && (
              <div class="actor__birthday">
                <time datetime={actor.birthday}>
                  {new Date(actor.birthday).toLocaleDateString("es-ES", {
                    year: "numeric",
                    month: "long",
                    day: "numeric",
                  })}
                </time>
                {actor.deathday && (
                  <div class="actor__deathday">
                    <time datetime={actor.deathday}>
                      {new Date(actor.deathday).toLocaleDateString("es-ES", {
                        year: "numeric",
                        month: "long",
                        day: "numeric",
                      })}
                    </time>
                  </div>
                )}
              </div>
            )
          }
          {
            actor.place_of_birth && (
              <div class="actor__place-of-birth">
                
                {actor.place_of_birth}
              </div>
            )
          }
        </header>
        <section class="actor__biography">
          <h2 class="actor__biography-title">Biography</h2>
          <div class="actor__biography-text">
            {
              actor.biography ? (
                <p>{actor.biography}</p>
              ) : (
                <p class="actor__no-bio">No biography available.</p>
              )
            }
          </div>
        </section>
      </article>
    </section>
  </main>
  <footer class="footer">
    <nav class="footer-nav">
      <a href="/actors/1" class="footer-nav__link" data-astro-reload>Inicio</a>
    </nav>
  </footer>
</MainLayout>

<style>
  .actor {
    min-height: 100vh;
    color: var(--color-text);
    font-family: var(--font-main);
    display: flex;
    flex-direction: column;
    background: oklch(0.93 0.03 100);
  }

  /* Contenido principal */
  .actor__content {
    max-width: 1080px;
    width: 100%;
    margin: 0 auto;
    padding: 2rem;
    flex-grow: 1;
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: 3rem;
    align-items: center;
  }

  /* Póster del actor */
  .actor__poster-wrapper {
    width: 100%;
    max-width: 400px;
    position: relative;
    border-radius: 15px;
    overflow: hidden;
  }
  .actor__poster-wrapper:hover {
    transform: translateY(-10px) scale(1.02);
  }

  .actor__poster {
    width: 100%;
    display: block;
    aspect-ratio: 2/3;
    object-fit: cover;
  }

  .actor__popularity {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--gradient-glass);
    backdrop-filter: blur(10px);
  }
  .actor__popularity-value {
    font-size: 2.6rem;
    font-weight: var(--font-weight-bold);
    color: var(--color-accent);
    text-shadow: var(--gradient-dark);
  }
  .actor__popularity-max {
    font-size: 1.6rem;
    color: var(--color-light);
    opacity: 0.6;
    align-self: flex-end;
    text-shadow: var(--gradient-dark);
    font-weight: var(--font-weight-medium);
  }

  /* Información del actor */
  .actor__info {
  display: flex;
  flex-direction: column;
  gap: 2.5rem;
  padding-bottom: 5rem;
}

  .actor__header {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .actor__name {
    font-size: 3rem;
    font-weight: var(--font-weight-bold);
    color: var(--color-text);
    margin: 0;
    line-height: 1.2;
    text-shadow: var(--gradient-dark);
  }

  .actor__birthday,
  .actor__deathday,
  .actor__place-of-birth {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    font-size: 1.1rem;
    color: var(--color-text);
    text-shadow: var(--gradient-dark);
    font-weight: var(--font-weight-medium);
  }

.actor__biography {
  width: 100%;
  max-height: 500px;
  overflow-y: auto;
  padding-right: 1rem; 
  position: relative;
  color: var(--color-text);
  text-shadow: var(--gradient-dark);
}

  .actor__biography-text {
  width: 100%;
  font-size: 1.2rem;
  line-height: 1.7;
  color: var(--color-text);
  margin: 0;
  background: rgba(0, 0, 0, 0.2);
  padding: 1.5rem;
  border-radius: 20px;
  backdrop-filter: blur(10px);
}

  .actor__no-bio {
    font-style: italic;
    opacity: 0.8;
  }

  
  .footer {
    background: var(--color-dark);
    color: var(--color-light);
    padding: 2rem 1rem;
    display: flex;
    justify-content: center;
    align-items: center;
    border-top: 2px solid var(--color-primary);
    margin-top: auto; 
  }

  .footer-nav {
    display: flex;
    gap: 1.5rem;
    align-items: center;
    font-family: var(--font-main);
  }

  .footer-nav__link {
    color: var(--color-accent);
    text-decoration: none;
    font-weight: var(--font-weight-medium);
    transition: color 0.3s ease;
    font-size: 1.5rem;
    text-align: center;
  }

  .footer-nav__link:hover {
    color: var(--color-light);
  }
</style>
