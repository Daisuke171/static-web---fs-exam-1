---
import MainLayout from "../../layout/MainLayout.astro";
import MovieCard from "../../components/MovieCard.astro";
import NavBar from '../../components/navBar.astro';

const API_KEY = "26556575658af780cf7d1cdfa28bc314";
const response = await fetch(`https://api.themoviedb.org/3/movie/popular?api_key=${API_KEY}&language=es-ES&page=1`);
const data = await response.json();
const movies = data.results.slice(0, 5);
---

<MainLayout title="Movie Zone">
  <header class="header-catalog">
    <NavBar />
    <h1 class="header-catalog__title">Bienvenido a Movie Zone</h1>
    <p class="header-catalog__description">Explora las películas más populares del momento</p>
  </header>

  <main class="main-content">
    <section class="hero-section">
      {
        movies.map(movie => (
          <article class="hero-card">
            <img src={`https://image.tmdb.org/t/p/w500${movie.poster_path}`} alt={movie.title} class="hero-card__img" />
            <div class="hero-card__content">
              <h2 class="hero-card__title">{movie.title}</h2>
              <p class="hero-card__overview">{movie.overview}</p>
              <p class="hero-card__rating">⭐ {movie.vote_average}</p>
            </div>
          </article>
        ))
      }
    </section>
  </main>

  <footer class="footer">
    <nav class="footer-nav">
      <a href="/movies/1" class="footer-nav__link">Ver catálogo completo</a>
      <a href="../contact" class="footer-nav__contac">Contáctanos</a>
    </nav>
  </footer>
</MainLayout>

<style>

:root {
  --color-background: var(--color-dark);
}

html, body {
  margin: 0;
  padding: 0;
  min-height: 100vh;
  background-color: var(--color-background);
  display: flex;
  flex-direction: column;
  font-family: var(--font-main);
}

main.main-content {
  flex: 1;
}

.header-catalog {
  padding-bottom: 3rem;
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
  align-items: center;
  background: var(--gradient-primary);
  color: var(--color-light);
}

.header-catalog__title {
  font-size: 1.5rem;
  text-align: center;
  margin: 0;
  background: linear-gradient(to right, var(--color-light), var(--color-accent));
  background-clip: text;
  -webkit-background-clip: text;
  color: transparent;
  font-weight: var(--font-weight-bold);
}

.header-catalog__description {
  font-size: 1.2rem;
  text-align: center;
  color: var(--color-light);
  max-width: 600px;
}


.hero-section {
  display: flex;
  flex-direction: column;
  gap: 2rem;
  padding: 2rem;
}

.hero-card {
  display: grid;
  padding: 1rem;
  grid-template-columns: repeat(2, 1fr);
  gap: 1rem;
  background-color: rgba(255, 255, 255, 0.05);
  color: var(--color-light);
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 0 10px rgba(0,0,0,0.5);
  transition: transform 0.3s ease;
}

.hero-card p {
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.hero-card:hover {
  transform: scale(1.01);
}

.hero-card__img {
  width: 100%;
  height: auto;
  object-fit: cover;
}

.hero-card__content {
  padding: 1rem;
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.hero-card__title {
  font-size: 1.8rem;
  color: var(--color-accent);
}

.hero-card__overview {
  font-size: 1rem;
  line-height: 1.5;
  color: var(--color-light);
}

.hero-card__rating {
  font-weight: bold;
  color: gold;
}


@media (min-width: 768px) {
  .header-catalog__title {
    font-size: 3.5rem;
  }

  .hero-card {
    display: flex;
    flex-direction: row;
  }

  .hero-card__img {
    width: 250px;
    height: auto;
  }

  .hero-card__content {
    flex: 1;
  }
}


.footer {
  background: var(--color-dark);
  color: var(--color-light);
  padding: 2rem 1rem;
  display: flex;
  justify-content: center;
  align-items: center;
  border-top: 2px solid var(--color-primary);
}

.footer-nav {
  display: flex;
  gap: 1.5rem;
  align-items: center;
}

.footer-nav__link {
  color: var(--color-accent);
  text-decoration: none;
  font-weight: var(--font-weight-medium);
  transition: color 0.3s ease;
}

.footer-nav__contac{
  color: var(--color-accent);
  text-decoration: none;
  font-weight: var(--font-weight-medium);
  transition: color 0.3s ease;
  text-align: end;
}

.footer-nav__link:hover,
.footer-nav__contac:hover {
  color: var(--color-light);
}
</style>
