---
import MainLayout from "../layout/MainLayout.astro";
import NavBar from '../components/navBar.astro';
---

<MainLayout title="User Profile">
    <header class="userProfile__header">
        <NavBar />
        <div class="userDetail">
        <figure class="userAvatar">
            <img src="/images/placegolderAvatar.png" alt="">
        </figure>
        <h1 class="userProfile__title">User</h1>
        </div>
    </header>
    
    
    <main class="userProfile__body">
        
    </main>
</MainLayout>

<style>

    
    .userProfile__header {
    padding-bottom: 3rem;
    display: flexblox;
    flex-direction: row;
    gap: 1.5rem;
    align-items: center;
    background: var(--gradient-primary);
    color: var(--color-light);  
    }

    .userDetail {
        display: flex;
        flex-direction: row;
        justify-content: flex-start;
        gap: 1.2rem;
        padding-left: 2rem;
        position: relative;
        top: 5rem;
    }

    .userAvatar, .userProfile__title{
        width: fit-content;
        padding-top: 2rem;
    }

    .userAvatar > img {
        border-radius: 50%;
        width: 100px;
        height: 100px;
        object-fit: cover;
        border: 2px solid var(--color-accent);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .userProfile__title {
    font-size: 3.5rem;
    text-align: center;
    margin: 0;
    color: aliceblue;
    font-weight: var(--font-weight-bold);
    font-family: var(--font-main);
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    
    position: relative;
    top: 1.25rem;
    }



   main {
    width: 100%;
    height: 2000px;
    background-color: var(--color-dark);
   }


</style>